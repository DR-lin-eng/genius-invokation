{
  "name": "@gi-tcg/core",
  "version": "0.5.0",
  "type": "module",
  "description": "Genius Invokation TCG Simulator core library",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./builder": {
      "types": "./src/builder/index.ts",
      "bun": "./src/builder/index.ts",
      "import": "./dist/builder.js"
    }
  },
  "scripts": {
    "check": "tsc --noEmit",
    "build:ohm": "ohm generateBundles -et src/query/query.ohm",
    "build:ts": "tsup",
    "build": "bun build:ohm && bun build:ts"

  },
  "dependencies": {
    "@gi-tcg/typings": "workspace:*",
    "@gi-tcg/utils": "workspace:*",
    "core-js": "3.37.0",
    "immer": "^10.0.3",
    "ohm-js": "^17.1.0"
  },
  "devDependencies": {
    "@ohm-js/cli": "^2.0.0",
    "prettier": "3.1.1"
  }
}
