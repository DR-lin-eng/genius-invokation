{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",

    "lib": ["ESNext"],
    
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist", 

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true
  }
}
