{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node16",
    
    "declaration": true,
    "sourceMap": true, 
    "outDir": "./dist", 

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
